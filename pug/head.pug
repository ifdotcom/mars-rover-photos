mixin item(name, value)
	.data--card__items
		p=name
		span=value
-var title = "Mars Rover Photos"
-var subtitle = "Image data gathered by NASA's Curiosity, Opportunity, and Spirit rovers on Mars"
doctype html
html
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet",href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i|Oswald:400,500,600,700&display=swap" )
		link(rel="stylesheet", href="css/mars-rover.css")
		title=title
	body
		block contenido